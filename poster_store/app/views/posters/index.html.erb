<% if current_admin %>
    Signed in as <strong><%= current_admin%></strong>!
	<%= link_to  "sign out as admin", destroy_admin_session_path, method: :delete %>
<% end %>

<h1>Listing posters</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
	   <th>Description</th>
	    <th>Image_url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posters.each do |poster| %>
      <tr>
        <td><%= poster.title %></td>
        <td><%= poster.price %></td>
		<td><%= poster.description %></td>
		<td><%= poster.image_url %></td>
        <td><%= link_to 'Show', poster %></td>
        <td><%= link_to 'Edit', edit_poster_path(poster) %></td>
        <td><%= link_to 'Destroy', poster, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Poster', new_poster_path %>
