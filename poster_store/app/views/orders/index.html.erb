<h1>Purchase orders</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Eamil</th>
      <th>Pay type</th>
	  <th>Card type</th>
	  <th>City</th>
	  <th>State</th>
	  <th>Zip code</th>
	  <th>Phone</th>
	  <th>Name on card</th>
	  <th>Card number</th>
	  <th>CVV code</th>
	  <th>Exp date</th>
      <th colspan="10"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        <td><%= order.address %></td>
        <td><%= order.eamil %></td>
        <td><%= order.pay_type %></td>
		<td><%= order.card_type %></td>
		<td><%= order.city %></td>
		<td><%= order.state %></td>
		<td><%= order.zipcode %></td>
		<td><%= order.phone %></td>
		<td><%= order.name_on_card %></td>
		<td><%= order.card_number %></td>
		<td><%= order.cvv_code %></td>
		<td><%= order.exp_date %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

