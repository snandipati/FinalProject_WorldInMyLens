<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <b><%= f.label :name %></b><br>
    <%= f.text_field :name, size: 40 %>
  </div>
  
  <div class="field">
    <b><%= f.label :address %></b><br>
	<%= f.text_field :address, size: 40 %>
  </div>
  
  <div class="field">
    <b><%= f.label :city %></b><br>
	<%= f.text_field :city, size: 40 %>
  </div>
  
  <div class="field">
    <b><%= f.label :state %></b><br>
	<!--<%= f.text_field :state, size: 40 %>-->
	<%= f.select :state, Order::STATES %>
	
  </div>
  
  <div class="field">
    <b><%= f.label :zipcode %></b><br>
	<%= f.text_field :zipcode, size: 20 %>
  </div>
  
  <div class="field">
    <b><%= f.label :phone %></b><br>
	<%= f.text_field :phone, size: 20 %>
  </div>
  
  <div class="field">
    <b><%= f.label :email %></b><br>
    <%= f.text_field :eamil, size: 40 %>
  </div>
  
  <div class="field">
    <b><%= f.label :pay_type %>:</b>
	<!--<%= f.select :pay_type, Order::PAYMENT_TYPES, prompt: 'Select Payment Type' %>-->
	<%= f.radio_button :pay_type, 'PayPal' %>
	<%= f.label :PayPal %>
	<%= f.radio_button :pay_type, 'CreditCard' %>
	<%= f.label :CreditCard %>
  </div>
  
  <div class="field">
    <b><%= f.label :card_type %></b><br>
	<%= f.select :card_type, Order::CARD_TYPES, prompt: 'Select Card Type' %>
  </div>
  
  <div class="field">
    <b><%= f.label :name_on_card %></b><br>
	<%= f.text_field :name_on_card, size: 30 %>
  </div>
  
  <div class="field">
    <b><%= f.label :card_number %></b><br>
	<%= f.text_field :card_number, size: 20 %>
  </div>
  
  <div class="field">
    <b><%= f.label :cvv_code %></b><br>
	<%= f.text_field :cvv_code, size: 10 %>
  </div>
  
  <div class="field">
    <b><%= f.label :Exp_date %></b><br>
	<%= f.text_field :exp_date, size: 10 %>
  </div>
  
  
  <div class="actions">
    <b><%= f.submit 'Place Order' %></b>
  </div>
<% end %>
